            <h2 class="heading-secondary u-margin-bottom-small">Results</h2>
        </div>
        <div class="row u-center-text">

            {{!-- BESTBUY column --}}
            <div class="col">
                <h3 class="heading-tertiary u-margin-bottom-small">{{this.userInput}}
                    <img src="../img/bestBuy-logo.png" style="width: 101px; height: auto;" alt="BestBuy-logo">
                </h3>
                <div class="card__details">
                    <div class="list-item" id="bestBuy-item">
                        <ul id="example-list" class="list-group">
                            {{#each bbEntries}}
                            <li class="card-box card-box--product__bestbuy"><b><em>Product No.{{@key}}: </em></b>{{this.name}}</li>
                            <li class="card-box card-box--sku"><b>SKU #: </b>{{this.sku}} </li>
                            <li class="card-box card-box--price"><b>Price: $</b>{{this.price}}</li>
                            <li class="card-box card-box--link"><a href={{this.url}} class="btn btn-info" role="button">Buy Now</a></li>
                            <br>
                            {{/each}}
                        </ul>
                    </div>
                </div>
                </a>
            </div>

            {{!-- EBAY column --}}
            <div class="col">
                <h3 class="heading-tertiary u-margin-bottom-medium">{{this.userInput}}
                    <img src="../img/eBay-logo.png" style="width: 149px; height: auto;" alt="eBay-logo">
                </h3>
                <div class="card__details">
                    <div class="list-item" id="eBay-item">
                        <ul id="example-list" class="list-group">
                            {{#each ebEntries}}
